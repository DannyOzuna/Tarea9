@page "/"
@inject IRepoVacunados RepoVacunados

<div class="row justify-content-center">
    <div class="col-8">
        <div class="alert alert-info text-center">
            <h1>Listado de Solicitud</h1>
        </div>
    </div>
</div>


<table class="table table-striped shadow p-3 mb-5 bg-body rounded">
    <thead>
        <tr>
            <th>Cedula</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Teléfono</th>
            <th>Correo Electrónico</th>
            <th>Dirección</th>
            <th>Latitud</th>
            <th>Longitud</th>
        </tr>
    </thead>
    <tbody>
        @if(lsVacunados != null){
            @foreach (var item in lsVacunados)
            {
                <tr>
                    <td>@item.cedula</td>
                    <td>@item.nombre</td>
                    <td>@item.apellido</td>
                    <td>@item.telefono</td>
                    <td>@item.email</td>
                    <td>@item.direccion</td>
                    <td>@item.latitud</td>
                    <td>@item.longitud</td>
                </tr>
            }
        }
    </tbody>
</table>

@code{
    List<Vacunados> lsVacunados = new List<Vacunados>();
    
    protected async override Task OnInitializedAsync()
    {
        lsVacunados = await RepoVacunados.Get();
    }
}